# Commands of day a day

alias ls="exa --icons --color=always --oneline --long"
alias tree="exa --icons --color=always --tree --long"
alias cat="bat"
alias df="duf"
alias clear="tput reset"

# Commands for programming

## Compiling with clang

alias compile="clang++ $1 -Wno-c++17-extensions"
alias clearfile="cat /dev/null > $1"

alias vim="lvim"
